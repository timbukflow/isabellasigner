RewriteEngine on

# Legacy-URLs dauerhaft auf Startseite
RewriteRule ^blog(?:/.*)?$ / [R=301,L]
RewriteRule ^yoga/?$ / [R=301,L]
RewriteRule ^kontakt/?$ / [R=301,L]
RewriteRule ^die-schnelle-loesung/?$ / [R=301,L]
RewriteRule ^gedankenkarussell-und-gefuehlschaos/?$ / [R=301,L]
RewriteRule ^darf-ich-vorstellen-die-drei(?:-doshas)?/?$ / [R=301,L]

# Pretty URLs auf entsprechende PHP-Dateien aufl√∂sen
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php

# 404 Fehlerseite
ErrorDocument 404 /404.php
